{% extends 'AppBundle:Admin:layout.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="page-title">
                <h1>Categories</h1>
            </div>
        </div>
        <!-- /.col-lg-12 -->
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="portlet portlet-green">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Articles</h4>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="portlet-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Slug</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for category in categories %}
                                <tr>
                                    <td>{{ category.name }}</td>
                                    <td>{{ category.slug }}</td>
                                    <td>
                                        <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-info"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <a href="{{ path('category_new') }}" class="btn btn-primary">Create new category</a>
                    </div>
                </div>
            </div>
            <!-- /.portlet -->
        </div>
    </div>
{% endblock %}
