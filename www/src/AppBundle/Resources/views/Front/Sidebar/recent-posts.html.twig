<div class="section-container">
    <h4 class="section-title"><span>Recent Post</span></h4>
    <ul class="sidebar-recent-post">
        {% for article in articles %}
            <li>
                <div class="info">
                    <h4 class="title"><a href="{{ path('front_article_show', {'slug': article.slug}) }}">{{ article.title }}</a></h4>
                    <span class="date">{{ article.createdAt|localizeddate('medium', 'none', null) }}</span>
                </div>
            </li>
        {% endfor %}
    </ul>
</div>